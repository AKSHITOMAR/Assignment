#include<bits/stdc++.h>
using namespace std;
class node{
    public:
    int data;
    node* left;
    node* right;
    node(int d){
        this->data=d;
        this->left=NULL;
        this->right=NULL;
    }
};
int maxdepth(node* root){
    if(root==NULL){
        return 0;
    }
    int left=maxdepth(root->left);
    int right=maxdepth(root->right);
    return (1+max(left,right));
}
node* buildtree(node* root){
    cout<<"enter data: "<<endl;
    int data;
    cin>>data;
    if(data==-1){
        return NULL;
    }
    root=new node(data);
    cout<<"enter left child of"<<data<<endl;
    root->left=buildtree(root->left);
    cout<<"enter right child of"<<data<<endl;
    root->right=buildtree(root->right);
    return root;
}
int main(){
    node* root=NULL;
    root=buildtree(root);
    cout<<"Maxdepth"<<maxdepth(root);
}
