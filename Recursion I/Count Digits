class Solution {
  public:
    int evenly(int n,int oreo){
        if(n==0){
            return 0 ;
        }
        int count=0;
        int digit=n%10;
        if(digit!=0 && oreo%digit==0){
            count++;
        }
        return count+evenly(n/10,oreo);
    }
    int evenlyDivides(int n) {
       return evenly(n,n);
    }
};
